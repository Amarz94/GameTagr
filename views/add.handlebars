<section id="add" class="container">
    <div class="form-wrap">
        <h1>Add A Game</h1>
        <p>Tag a game!</p>
        <form>
            <div class="input-group">
                <label for="post-title">Post Title</label>
                <input type="text" name="title" id="title" class="input-box" placeholder="eg. Post Title"
                    maxlength="100" required>
            </div>
            <div class="input-group">
                <label for="game-title">Game Title</label>
                <input type="text" name="game-title" id="game-title" class="input-box" placeholder="eg. Game Title"
                    maxlength="100">
            </div>
            <div class="input-group">
                <label for="body">Game Review</label>
                <textarea name="body" id="body" class="input-box" placeholder="Review the game" rows="10"
                    required></textarea>
            </div>
            <div class="input-group">
                <label for="author">Author</label>
                <input type="author" name="post_author" id="author" class="input-box" placeholder="Your Name" required>
            </div>
            <div class="input-group">
                <label for="rating">Star Rating</label>
                <input type="number" name="rating" id="rating" class="input-box" placeholder="How many stars?">
            </div>
            <input type="submit" value="Tag Game" class="btn btn-reverse">
        </form>
    </div>
</section>